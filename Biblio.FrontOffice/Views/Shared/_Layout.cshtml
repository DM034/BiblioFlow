@using Microsoft.AspNetCore.Http
@{
    var userEmail = Context.Session.GetString("user_email");
    var isLogged = !string.IsNullOrWhiteSpace(userEmail);
    var title = (ViewData["Title"] as string) ?? "BiblioFlow";
}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title - BiblioFlow</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-app text-light">
  <nav class="navbar navbar-expand-lg navbar-dark py-3">
    <div class="container">
      <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">BiblioFlow</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav me-auto gap-lg-1">
          <li class="nav-item"><a class="nav-link" asp-controller="Books" asp-action="Index">Catalogue</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Loans" asp-action="Index">My Loans</a></li>
        </ul>

        <div class="d-flex align-items-center gap-2">
          @if (isLogged)
          {
            <span class="badge bg-secondary">@userEmail</span>
            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
          }
          else
          {
            <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">Login</a>
          }
        </div>
      </div>
    </div>
  </nav>

  <main class="container pb-5">
    @if (TempData["Message"] is string msg && !string.IsNullOrWhiteSpace(msg))
    {
      <div class="alert alert-success border-0" style="background:rgba(16,185,129,.14); color:#d1fae5">
        @msg
      </div>
    }
    @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
    {
      <div class="alert alert-danger border-0" style="background:rgba(239,68,68,.14); color:#fee2e2">
        @err
      </div>
    }

    @RenderBody()
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
