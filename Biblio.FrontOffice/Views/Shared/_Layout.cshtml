@using Microsoft.AspNetCore.Http
<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>@ViewData["Title"] - BiblioFlow</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/front.css" asp-append-version="true" />
</head>
<body>
@{
  var email = Context.Session.GetString("email");
  var isAuth = !string.IsNullOrWhiteSpace(email);
}

<header class="fo-topbar">
  <div class="container py-3 d-flex align-items-center justify-content-between gap-3">
    <a class="fo-brand" href="/Books">
      <div class="fo-logo">BF</div>
      <div>
        <div class="fw-semibold lh-1">BiblioFlow</div>
        <div class="small text-white-50 lh-1">FrontOffice</div>
      </div>
    </a>

    <div class="d-flex align-items-center gap-2">
      @if (isAuth)
      {
        <span class="fo-pill">Logged as: <strong>@email</strong></span>
        <a class="btn btn-ghost btn-sm" href="/Account/Logout">Logout</a>
      }
      else
      {
        <a class="btn btn-primary btn-sm" href="/Account/Login">Login</a>
      }
    </div>
  </div>
</header>

<main class="container pb-4">
  @if (TempData["Msg"] is string msg && !string.IsNullOrWhiteSpace(msg))
  {
    <div class="alert alert-info mt-3">@msg</div>
  }
  @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
  {
    <div class="alert alert-danger mt-3">@err</div>
  }

  @RenderBody()

  <div class="fo-footer">
    © @DateTime.UtcNow.Year BiblioFlow
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
