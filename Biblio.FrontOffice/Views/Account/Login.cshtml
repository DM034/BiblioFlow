@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
  <div class="col-md-7 col-lg-5">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0 fw-semibold">Login</h4>
      </div>
      <div class="card-body p-4">
        <p class="muted">Enter your email. It will be used to track your loans.</p>

        <form method="post" asp-controller="Account" asp-action="Login">
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" name="email" type="email" placeholder="you@example.com" required />
          </div>
          <button class="btn btn-primary w-100" type="submit">Continue</button>
        </form>

        <div class="mt-3 muted" style="font-size:.9rem">
          Tip: use <code>test@local</code> if you want.
        </div>
      </div>
    </div>
  </div>
</div>
