@{
  ViewData["Title"] = "Login";
  var msg = TempData["Msg"] as string;
}

<div class="fo-card mt-3" style="max-width:520px;margin:0 auto;">
  <div class="fo-card-header">
    <div class="fw-semibold">Sign in</div>
    <span class="fo-pill">FrontOffice</span>
  </div>

  <div class="fo-card-body">
    @if (!string.IsNullOrWhiteSpace(msg))
    {
      <div class="alert alert-info">@msg</div>
    }

    <form method="post" action="/Account/Login">
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" name="email" type="email" placeholder="test@local" required />
      </div>

      <div class="d-grid">
        <button class="btn btn-primary">Login</button>
      </div>

      <div class="text-white-50 small mt-3">
        Tip: utilise un email simple (ex: <code>test@local</code>).
      </div>
    </form>
  </div>
</div>
