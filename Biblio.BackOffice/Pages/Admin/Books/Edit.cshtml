@page
@model Biblio.BackOffice.Pages.Admin.Books.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.Id" />
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Author" class="control-label"></label>
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Category" class="control-label"></label>
                <input asp-for="Book.Category" class="form-control" />
                <span asp-validation-for="Book.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Year" class="control-label"></label>
                <input asp-for="Book.Year" class="form-control" />
                <span asp-validation-for="Book.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Summary" class="control-label"></label>
                <input asp-for="Book.Summary" class="form-control" />
                <span asp-validation-for="Book.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PdfPath" class="control-label"></label>
                <input asp-for="Book.PdfPath" class="form-control" />
                <span asp-validation-for="Book.PdfPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <p>
        <a href="/Admin/Books/UploadPdf?BookId=@Model.Book.Id">Upload PDF for this book</a>
        </p>

        @if (!string.IsNullOrWhiteSpace(Model.Book.PdfPath))
        {
        <p>Current PdfPath: <code>@Model.Book.PdfPath</code></p>
        }
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

