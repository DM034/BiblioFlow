@page
@model Biblio.BackOffice.Pages.Admin.Books.IndexModel
@{
  ViewData["Title"] = "Books";
}
<h2>Books</h2>

<p><a href="/Admin/Books/Create">Create</a></p>

<table border="1" cellpadding="8" cellspacing="0">
  <tr>
    <th>Id</th><th>Title</th><th>Author</th><th>Category</th><th>Year</th><th>PDF</th><th>Actions</th>
  </tr>
@foreach (var b in Model.Items)
{
  <tr>
    <td>@b.Id</td>
    <td><b>@b.Title</b></td>
    <td>@b.Author</td>
    <td>@b.Category</td>
    <td>@b.Year</td>
    <td>@(string.IsNullOrWhiteSpace(b.PdfPath) ? "â€”" : "OK")</td>
    <td style="white-space:nowrap;">
      <a href="/Admin/Books/Edit/@b.Id">Edit</a> |
      <a href="/Admin/Books/UploadPdf/@b.Id">Upload PDF</a>
    </td>
  </tr>
}
</table>
