@page "{id:int}"
@model Biblio.BackOffice.Pages.Admin.Books.UploadPdfModel
@{
    ViewData["Title"] = "Upload PDF";
}
<h2>Upload PDF</h2>

<p><b>@Model.Book?.Title</b> â€” @Model.Book?.Author</p>

<form method="post" enctype="multipart/form-data">
  <div style="margin:12px 0;">
    <input type="file" name="Pdf" accept="application/pdf" />
  </div>
  <button type="submit">Upload</button>
  <a href="/Admin/Books">Back</a>
</form>

@if (!string.IsNullOrWhiteSpace(Model.CurrentPath))
{
  <p style="margin-top:10px;">
    Current PDF: <code>@Model.CurrentPath</code>
  </p>
}
