@page
@model Biblio.BackOffice.Pages.Admin.Licenses.IndexModel
@{
  ViewData["Title"] = "Licenses";
}

<h2>Licenses (Seats)</h2>

<table class="table">
  <thead>
    <tr><th>Book</th><th>Seats</th><th></th></tr>
  </thead>
  <tbody>
  @foreach (var r in Model.Rows)
  {
    <tr>
      <td>@r.BookTitle</td>
      <td>
        <form method="post" style="display:flex; gap:10px; align-items:center">
          <input type="hidden" name="BookId" value="@r.BookId" />
          <input type="number" name="Seats" value="@r.Seats" min="1" class="form-control" style="width:120px" />
          <button type="submit" class="btn btn-primary">Save</button>
        </form>
      </td>
      <td></td>
    </tr>
  }
  </tbody>
</table>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
  <p><b>@Model.Message</b></p>
}
